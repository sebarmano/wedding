<div class="row">
  <div class="large-6 columns">
    <%= simple_form_for(@event) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :datetime %>
        <%= f.input :tag_list, placeholder: "Separate tags with commas" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>