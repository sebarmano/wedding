<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :datetime %>
    <%= f.input :tag_list, :hint => "Separate tags with commas." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
